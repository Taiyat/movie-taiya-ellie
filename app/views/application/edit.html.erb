<h2>Edit Movie</h2>


<form action="/update_movie/<%= @movie.id %>">
  <input type="text" name="title" placeholder="Title" value="<%= @movie.title %>">
  <input type="text" name="url" placeholder="url of movie picture" value="<%= @movie.url %>">
  <input type="text" name="description" placeholder="Description" value="<%= @movie.description %>">
  <input type="submit">
</form>